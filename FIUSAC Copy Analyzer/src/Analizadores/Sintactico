package analizadores;
import java_cup.runtime.*;
import java.util.ArrayList;

parser code 
{:
    public String Resulto = "";
    private Symbol s;

    public void error_sintax(Symbol s){
        this.s = s;
    }
    
    public Symbol getS(){
        return this.s;
    }
:} 

terminal String BPDEG, BPGRE, BPSTG, BPDOUBLE;
terminal String BPGBARRAS,BPTITULO, BPEJEX;
terminal String BPVALORES, BPTTX, BPTTY, BPGPIE;
terminal String BPGLINEAS,BPARCHIVO;
terminal String BPPTCOMA, BPDOSPUNTOS, BPCOMA;
terminal String BPCORIZQ, BPCORDER, BPLLAIZQ, BPLLADER;
terminal String BPEQUAL;
terminal String IDENTIFICADOR, BPCADENA, DD;


non terminal ini, contenidogeneral ,cuerpo, graficas, titulos, ejesx, contenidox, valores, contenidov, titulox, tituloy, Arch;

start with ini;

ini::=BPGRE BPLLAIZQ contenidogeneral BPLLADER {::};

contenidogeneral::=BPDEG BPLLAIZQ cuerpo BPLLADER graficas {::};

cuerpo::=BPSTG IDENTIFICADOR BPEQUAL BPCADENA BPPTCOMA  {::}
        |BPDOUBLE IDENTIFICADOR BPEQUAL DD BPPTCOMA {::}
        |cuerpo BPSTG IDENTIFICADOR BPEQUAL BPCADENA BPPTCOMA {::}
        |cuerpo BPDOUBLE IDENTIFICADOR BPEQUAL DD BPPTCOMA {::}
;

graficas::=BPGBARRAS BPLLAIZQ titulos ejesx valores titulox tituloy BPLLADER {::}
            |BPGPIE BPLLAIZQ titulos ejesx valores BPLLADER {::}
            |BPGLINEAS BPLLAIZQ titulos Arch BPLLADER {::}
            |graficas BPGBARRAS BPLLAIZQ titulos ejesx valores titulox tituloy BPLLADER {::}
            |graficas BPGPIE BPLLAIZQ titulos ejesx valores BPLLADER {::}
            |graficas BPGLINEAS BPLLAIZQ titulos Arch BPLLADER {::}
;

titulos::=BPTITULO BPDOSPUNTOS IDENTIFICADOR BPPTCOMA {::}
         |BPTITULO BPDOSPUNTOS BPCADENA BPPTCOMA {::}
;

ejesx::=BPEJEX BPDOSPUNTOS BPCORIZQ contenidox BPCORDER BPPTCOMA {::};

contenidox::=
            contenidox BPCADENA {::}
            |contenidox IDENTIFICADOR {::}
            |contenidox BPCOMA {::}
            |BPCADENA {::}
            |IDENTIFICADOR {::}
;

valores::=BPVALORES BPDOSPUNTOS BPCORIZQ contenidov BPCORDER BPPTCOMA{::};

contenidov::=
            contenidov DD {::}
            |contenidov IDENTIFICADOR {::}
            |contenidov BPCOMA {::}
            |DD {::}
            |IDENTIFICADOR {::}
;

titulox::=BPTTX BPDOSPUNTOS IDENTIFICADOR BPPTCOMA {::}
         |BPTTX BPDOSPUNTOS BPCADENA BPPTCOMA {::}
;

tituloy::=BPTTY BPDOSPUNTOS IDENTIFICADOR BPPTCOMA {::}
         |BPTTY BPDOSPUNTOS BPCADENA BPPTCOMA {::}
;

Arch::=BPARCHIVO BPDOSPUNTOS IDENTIFICADOR BPPTCOMA {::}
      |BPARCHIVO BPDOSPUNTOS BPCADENA BPPTCOMA {::}
;