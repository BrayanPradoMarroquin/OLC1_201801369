package analizadores;
import java_cup.runtime.*;
import java.util.ArrayList;

parser code 
{:
    public String Resulto = "";
    private Symbol s;

    public void error_sintax(Symbol s){
        this.s = s;
    }
    
    public Symbol getS(){
        return this.s;
    }
:} 

terminal String BPDEG, BPGRE, BPSTG, BPDOUBLE;
terminal String BPGBARRAS,BPTITULO, BPEJEX;
terminal String BPVALORES, BPTTX, BPTTY, BPGPIE;
terminal String BPGLINEAS,BPARCHIVO;
terminal String BPPTCOMA, BPDOSPUNTOS, BPCOMA;
terminal String BPCORIZQ, BPCORDER, BPLLAIZQ, BPLLADER;
terminal String BPEQUAL;
terminal String IDENTIFICADOR, BPCADENA, DD;


non terminal ini, contenidogeneral ,cuerpo, graficas, titulos, ejesx, contenidox, valoresbarras, contenidov, titulosx, tituloy, Arch;

start with ini;

ini::=BPGRE BPLLAIZQ contenidogeneral BPLLADER {::};

contenidogeneral::=BPDEG BPLLAIZQ cuerpo graficas {::};

cuerpo::=BPSTG IDENTIFICADOR BPEQUAL BPCADENA BPPTCOMA {::}
        |BPDOUBLE IDENTIFICADOR BPEQUAL DD BPPTCOMA {::}
        |cuerpo BPLLADER {::}
        |BPLLADER {::}
;

graficas::=BPGBARRAS BPLLAIZQ titulos ejesx valoresbarras titulosx tituloy BPLLADER{::}
            |BPGPIE BPLLAIZQ titulos ejesx valoresbarras BPLLADER {::}
            |BPGLINEAS BPLLAIZQ titulos Arch BPLLADER {::}
;

titulos::=BPTITULO BPDOSPUNTOS IDENTIFICADOR BPPTCOMA {::}
         |BPTITULO BPDOSPUNTOS BPCADENA BPPTCOMA {::}
;

ejesx::=BPEJEX BPDOSPUNTOS BPCORIZQ contenidox {::};

contenidox::=BPCADENA {::}
            |BPCOMA {::}
            |IDENTIFICADOR {::}
            |contenidox BPCORDER {::}
            |BPCORDER {::}
;

valoresbarras::=BPVALORES BPDOSPUNTOS BPCORIZQ contenidov {::};

contenidov::=DD {::}
            |BPCOMA {::}
            |IDENTIFICADOR {::}
            |contenidov BPCORDER {::}
            |BPCORDER {::}
;

titulosx::=BPTTX BPDOSPUNTOS IDENTIFICADOR BPPTCOMA {::}
         |BPTTY BPDOSPUNTOS BPCADENA BPPTCOMA {::}
;

tituloy::=BPTTY BPDOSPUNTOS IDENTIFICADOR BPPTCOMA {::}
         |BPTTY BPDOSPUNTOS BPCADENA BPPTCOMA {::}
;

Arch::=BPARCHIVO BPDOSPUNTOS IDENTIFICADOR BPPTCOMA {::}
      |BPARCHIVO BPDOSPUNTOS BPCADENA BPPTCOMA {::}
;